{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
		"comma-dangle": "off"
	},
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					["~logger", "src/configs/winston.config.js"]
				],
				"extensions": [".js"]
			}
		}
	}
}